type: HeatCrafter
name: boiler
description: Uses water and heat to produce steam.
size: 2
category: production

# 必要素材
requirements: [
  { item: copper, amount: 30 }
]

# クラフト時間と熱
craftTime: 60
heatRequirement: 4
maxEfficiency: 1.0  # 適正値に修正

# 液体モジュール有効化
hasLiquids: true
liquidCapacity: 20.0  # 受け入れ可能な量
outputsLiquid: true

# 見た目だけの擬似消費（本当に消費はHeatCrafter内部で処理）
consumeLiquids: [
  { liquid: water, amount: 5 }
]

# 出力
outputLiquids: [
  { liquid: steam, amount: 5 }
]